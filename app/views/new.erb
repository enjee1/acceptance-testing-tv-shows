<h1>Add Show Details</h1>
<form action="/television_shows" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="title"><br>

  <label for="network">Network</label>
  <input type="text" name="network" id="network"><br>

  <label for="starting_year">Starting Year</label>
  <input type="text" name="starting_year" id="starting_year"><br>

  <label for="synopsis">Synopsis</label>
  <input type="text" name="synopsis" id="synopsis"><br>

  <label for="genre">Genre</label>
    <select name="genre" id="genre">
      <% @genres.each do |genre| %>
      <option value="<%= "#{genre}" %>"> <%= "#{genre}" %></option>
      <% end %>
    </select><br>

    <input type="submit" value="Add TV Show">
    <p><%= @error_message %></p>

</form>
